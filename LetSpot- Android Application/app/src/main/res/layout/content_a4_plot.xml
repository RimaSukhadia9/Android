<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs442.xqiu12.letspot.A4_plot"
    tools:showIn="@layout/activity_a4_plot">
    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/centralparking"
        android:drawablePadding="5dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/NoOfSpacesavail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="No of spaces available:"
        android:layout_alignParentStart="true" />
<!--
    <TextView
        android:id="@+id/NoOfSpots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="350"
        android:layout_toEndOf="@+id/NoOfSpacesavail"
        android:layout_alignRight="@+id/NoOfSpacesavail"
        android:layout_marginStart="80dp"
        android:layout_below="@+id/txtStatus" />
-->
    <TextView
        android:id="@+id/Details"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Address:"
        android:layout_above="@+id/Cancelmyspot"
        />
    <Button
        android:id="@+id/Reservemyspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESERVE!"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp" />

    <Button
        android:id="@+id/Cancelmyspot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BackToMaps"
        android:layout_alignTop="@+id/Reservemyspot"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
